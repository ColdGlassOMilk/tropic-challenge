= button_to @href, id: @id, method: :get, class: 'bg-indigo-500 text-white active:bg-indigo-600 font-bold text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150' do
  - if @icon.present?
    %i{ class: "fas fa-#{@icon}" }
    &nbsp;
  = @label
